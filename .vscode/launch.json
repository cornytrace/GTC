  "version": "0.2.0",
  "configurations": [
    {
      "type": "lldb",
      "request": "launch",
      "name": "Debug GTC",
      "cargo": {
        "args": ["build", "--bin=gtc", "--package=gtc"],
        "filter": {
          "name": "gtc",
          "kind": "bin"
        }
      },
      "args": [],
      "cwd": "${workspaceFolder}",
      "envFile": "${workspaceFolder}/.envrc",
      "console": "integratedTerminal"
    },
    {
      "type": "lldb",
      "request": "launch",
      "name": "Debug GTC (Viewer)",
      "cargo": {
        "args": ["build", "--bin=gtc", "--package=gtc"],
        "filter": {
          "name": "gtc",
          "kind": "bin"
        }
      },
      "args": ["--viewer"],
      "cwd": "${workspaceFolder}",
      "envFile": "${workspaceFolder}/.envrc",
      "console": "integratedTerminal"
    },
    {
      "type": "lldb",
      "request": "launch",
      "name": "Debug unit tests in executable 'gtc'",
      "cargo": {
        "args": ["test", "--no-run", "--bin=gtc", "--package=gtc"],
        "filter": {
          "name": "gtc",
          "kind": "bin"
        }
      },
      "args": [],
      "cwd": "${workspaceFolder}",
      "envFile": "${workspaceFolder}/.envrc",
      "console": "integratedTerminal"
    }
  ]
}
